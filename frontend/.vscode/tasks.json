{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start development mode",
      "type": "shell",
      "command": "npm",
      "args": ["--silent", "run", "start"],
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build Frontend Project",
      "type": "shell",
      "command": "npm",
      "args": ["--silent", "run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    }
  ]
}
